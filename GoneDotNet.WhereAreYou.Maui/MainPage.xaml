<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GoneDotNet.WhereAreYou.Maui"
             x:DataType="local:MainViewModel"
             x:Class="GoneDotNet.WhereAreYou.Maui.MainPage"
             Title="Where Are you?">

    <VerticalStackLayout>
        <Entry Text="{Binding DriverName}"
               Placeholder="Driver Name">
            <Entry.Triggers>
                <DataTrigger TargetType="Entry"
                             Binding="{Binding IsWorking}"
                             Value="True">
                    <Setter Property="IsEnabled" Value="False" />
                </DataTrigger>
                <DataTrigger TargetType="Entry"
                             Binding="{Binding IsWorking}"
                             Value="False">
                    <Setter Property="IsEnabled" Value="True" />
                </DataTrigger>
            </Entry.Triggers>
        </Entry>

        <Button Text="Start Working"
                Command="{Binding ChangeStatusCommand}">
            <Button.Triggers>
                <DataTrigger TargetType="Button"
                             Binding="{Binding IsWorking}"
                             Value="True">
                    <Setter Property="Text" Value="Stop Working" />
                </DataTrigger>
                <DataTrigger TargetType="Button"
                             Binding="{Binding IsWorking}"
                             Value="False">
                    <Setter Property="Text" Value="Start Working" />
                </DataTrigger>
            </Button.Triggers>
        </Button>
    </VerticalStackLayout>
</ContentPage>